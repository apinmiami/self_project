pipeline {
	agent any
		stages {
			stage("Production") {
				when { 
					branch 'master'
				}
				steps {
					script {
						if (env_prod == 'true') {
						sh '''
						ssh root@automation "cd /data/self-workspace/terraform-files/E0_multi_env; terraform plan -var-file="production.tfvars""
						'''
						}
					}
				}
			}
		}
	}